<nav class="navbar">
  <span class="navbar-brand mb-0 h1" href="#"><i class="fas fa-hamburger"></i>&nbsp;SCRUMMY BURGERS</i></span>
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Are you ready to feast on the scrummiest, yummiest burgers!?</h1>
    </div>
    <div class="col-md-6 burger-img">
      <img src="assets/img/scrum.png" alt="Drawing of a burger" height="400">    
    </div>
  </div>
  <hr>
  <div class="row devour">
    <div class="col-md-6">
      <h2>Burger Menu</h2>
        <ul>
        {{#each burger}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}<span>.</span> {{this.burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="true">
                <button type="submit" class="btn-primary">Devour!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Burgers You Ate!</h2>
      <ul>
        {{#each burger}}
          {{#if this.devoured}}
            <li>
              {{this.id}}<span>.</span> {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
    <div class="row add-burger">
      <div class="col-md-12">
        <h2>Add Your Own Burger</h2>
        <form class="create-update-form" action="/" method="POST">
          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="burger" name="burgerName">
          </div>
          <button type="submit" class="btn-primary">Add Burger</button>
        </form>
      </div>
    </div>
</div>
<footer>
  <h6>Copyright 2020 - Burger Girl</h6>
</footer>





